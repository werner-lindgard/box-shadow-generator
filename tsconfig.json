{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "composite": true,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "jsx": "react",
    "isolatedModules": true,
    "lib": ["ES2018", "DOM"],
    "module": "commonjs",
    "target": "ES2018",
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "src/*": ["./*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
